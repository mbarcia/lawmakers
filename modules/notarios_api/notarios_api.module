}

/**
 * Implements hook_theme().
 */
function notarios_api_theme() {
  $items = array();
  $items['notarios_api'] = array(
    'variables' => array(
      'committiees' => NULL,
      'node' => NULL,
      'bills' => NULL,
      'votes' => NULL,
    ),
    'file' => 'notarios-api.tpl.php',
    'path' => drupal_get_path('module', 'notarios_api') . '/theme',
  );

  return $items;
}
